{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 120,
    "useTabs": false,
    "arrowParens": "avoid",
    "htmlWhitespaceSensitivity": "strict",
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.scss",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.css",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
